<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8E8E8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/tool_bar_relative_lyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#BDD6D7"
            android:padding="10dp">

            <ImageView
                android:id="@+id/navigate_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:contentDescription="@string/app_name"
                android:padding="10dp"
                android:src="@drawable/back_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:text="Schedule"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#E8E8E8">

            <LinearLayout
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Day"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="ON"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="OFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="En/Dis"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/header"
                android:background="#808080" />

            <LinearLayout
                android:id="@+id/sunday_linear_lyt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view1"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Sun"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sun_on_timer_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#E8E8E8"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="On time"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sun_off_timer_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="#E8E8E8"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Off time"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sunday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Disabled"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/sunday_linear_lyt"
                android:background="#808080" />

            <LinearLayout
                android:id="@+id/monday_linear_lyt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view2"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Mon"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/mon_on_timer_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#E8E8E8"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="On time"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/mon_off_timer_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="#E8E8E8"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Off time"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/monday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Disabled"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/monday_linear_lyt"
                android:background="#808080" />

            <LinearLayout
                android:id="@+id/tuesday_linear_lyt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view3"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Tue"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tue_on_timer_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#E8E8E8"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="On time"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tue_off_timer_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="#E8E8E8"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Off time"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tuesday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Disabled"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tuesday_linear_lyt"
                android:background="#808080" />

            <LinearLayout
                android:id="@+id/wednesday_linear_lyt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view4"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Wed"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/wed_on_timer_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#E8E8E8"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="On time"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/wed_off_timer_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="#E8E8E8"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Off time"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/wednesday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Disabled"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/wednesday_linear_lyt"
                android:background="#808080" />

            <LinearLayout
                android:id="@+id/thursday_linear_lyt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view5"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Thu"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/thurs_on_timer_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#E8E8E8"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="On time"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/thurs_off_timer_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="#E8E8E8"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Off time"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/thursday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Disabled"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:id="@+id/view6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/thursday_linear_lyt"
                android:background="#808080" />

            <LinearLayout
                android:id="@+id/friday_timer_relative_lyt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view6"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Fri"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/fri_on_timer_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#E8E8E8"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="On time"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/fri_off_timer_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="#E8E8E8"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Off time"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/friday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Disabled"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:id="@+id/view7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/friday_timer_relative_lyt"
                android:background="#808080" />

            <LinearLayout
                android:id="@+id/saturday_linear_lyt"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/view7"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Sat"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sat_on_timer_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="#E8E8E8"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="On time"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/sat_off_timer_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="#E8E8E8"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Off time"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/saturday"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Disabled"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:id="@+id/view8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/saturday_linear_lyt"
                android:background="#808080" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view8"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/timezone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:padding="10dp"
                    android:text="Timezone : " />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/timezone"
                    android:layout_toRightOf="@+id/timezone"
                    android:padding="10dp" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/btn_save"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:background="@drawable/rounded_text_view"
            android:backgroundTint="#BDD6D7"
            android:gravity="center"
            android:padding="10dp"
            android:text="Save"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>

</ScrollView>